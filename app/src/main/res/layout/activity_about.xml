<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/tv_about_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="About This Application"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_developer_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Developer: [Muhammad Nabil Bin Mohd Zaimy]\nStudent ID: [2023393057]\nCourse: [ICT 602 Mobile Technology and Development]"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_about_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Â© 2025 Electricity Bill Estimator. All rights reserved."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_developer_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_website_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Website:"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_copyright"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_website_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="https://github.com/your-github-username/ElectricityBillEstimator"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:autoLink="web"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_website_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>